
{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}
{% block body %}
<style>
    .example-wrapper { margin: 35px; max-width: 100%; width: 95%; font: 18px/1.5 sans-serif; background-color:rgb(255,0,0);}
    .example-wrapper code { background: #000000; padding: 2px 6px; }
    .padre {
        
        display: flex;
        justify-content: center;
        align-content: center;
        flex-direction: column;
        margin: 15px;
    }
    .inner {
      position: absolute;
      width: 100%;
      height: 100%;
      background-color:#f1f1f1; 
    }
    .responsive {
        width: 85%;
        height: auto;
    }
</style>

<div class="inner">
    <div class="example-wrapper">
        <div id="imagen" style="width: 60%; padding-left: 15px;float:left; margin-top: 6%; padding-bottom: auto;">
            
            <img  class="responsive" src='assets/img/inventario.jpg' >
        </div>
        <div id="general" style="width: 35%; float:right; border-style: solid; margin-top: 5%; background: #EDFCF2;">
            <div id="titulo" class="padre">
                <h1> <black>Proyecto Emanuel</black></h1>
            </div>
            <div id="sub_title" style="margin: 15px;">
                <h2>Inicio de Sesion</h2>
            </div>
            <div id="cuadro_login" style="margin: 15px;">
                <form name="login" >
                    <label>Correo</label><br>
                    <input type="text" name="correo_u" value="" placeholder="ejemplo@hotmail.com .."><br>
                    <label>contraseña</label><br>
                    <input type="password" name="contrasenia_u" value="" placeholder="Contraseña.."><br><br>
                    <button class="btn btn-primary">Iniciar Sesion</button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %} 
    <script type="text/javascript" src="{{ asset('assets/js/usuario/index.js') }}"></script>
{% endblock %} 
